<Window x:Class="VIPKS_3.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VIPKS_3"
        mc:Ignorable="d"
        ResizeMode="CanMinimize" SizeToContent="Height" WindowStartupLocation="CenterScreen"
        Title="AuthWindow" Height="280" Width="300"
        Loaded="Window_Loaded">
    <Grid>
        <StackPanel>
            <Label>Username</Label>
            <TextBox x:Name="tbUsername"/>
            <Label>Логин</Label>
            <TextBox x:Name="tbLogin"/>
            <Label>Пароль</Label>
            <PasswordBox x:Name="tbPassword1"/>
            <Label>Подтвердите пароль</Label>
            <PasswordBox x:Name="tbPassword2"/>
            <StackPanel Orientation="Horizontal" Margin="10">
                <RadioButton x:Name="rbUser" Content="Пользователь"/>
                <RadioButton x:Name="rbAdmin" Content="Администратор" Margin="10,0,0,0"/>
            </StackPanel>
            <Button x:Name="btnRegister" Click="btnRegister_Click" IsDefault="True">Зарегистрировать</Button>
            <Button x:Name="btnClose" Click="btnClose_Click" IsCancel="True">Отмена</Button>
        </StackPanel>
    </Grid>
</Window>
