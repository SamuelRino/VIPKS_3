<Window x:Class="VIPKS_3.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VIPKS_3"
        mc:Ignorable="d"
        ResizeMode="CanMinimize" SizeToContent="Height" WindowStartupLocation="CenterScreen"
        Title="AuthWindow" Height="180" Width="300"
        Loaded="Window_Loaded">
    <StackPanel>
        <Label>Логин</Label>
        <TextBox x:Name="tbLogin"/>
        <Label>Пароль</Label>
        <PasswordBox x:Name="tbPassword"/>
        <Button x:Name="btnLogin" Click="btnLogin_Click" IsDefault="True">Вход</Button>
        <Button x:Name="btnClose" Click="btnClose_Click" IsCancel="True">Отмена</Button>
    </StackPanel>
</Window>
