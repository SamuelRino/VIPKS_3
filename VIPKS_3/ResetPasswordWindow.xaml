<Window x:Class="VIPKS_3.ResetPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VIPKS_3"
        mc:Ignorable="d"
        ResizeMode="CanMinimize" SizeToContent="Height" WindowStartupLocation="CenterScreen"
        Title="ResetPasswordWindow" Height="180" Width="300"
        Loaded="Window_Loaded">
    <Grid>
        <StackPanel>
            <Label>Новый пароль</Label>
            <PasswordBox x:Name="tbPassword1"/>
            <Label>Подтвердите новый пароль</Label>
            <PasswordBox x:Name="tbPassword2"/>
            <Button x:Name="btnReset" Click="btnReset_Click" IsDefault="True">Сменить</Button>
            <Button x:Name="btnClose" Click="btnClose_Click" IsCancel="True">Отмена</Button>
        </StackPanel>
    </Grid>
</Window>
